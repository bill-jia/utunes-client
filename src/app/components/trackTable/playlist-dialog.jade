md-dialog
  form 
    md-toolbar
      div.md-toolbar-tools
        h2 Add to playlist
        span(flex)
        md-button.md-icon-button(ng-click="cancel()")
          i.mdi.mdi-close
    md-dialog-content(style="max-width:700px; max-height:810px;")
      md-list
        md-list-item(ng-repeat="playlist in playlists | limitTo: playlists.length-1")
          p {{playlist.title}}
          md-checkbox.md-primary(ng-model="playlist.wanted")
      form(name="form")
        md-input-container
          label New playlist
          input(id="title" name="title" type="text" ng-model="playlists[playlists.length-1].title")
        md-input-container
          md-switch(id="is_public" ng-model="playlists[playlists.length-1].is_public" ng-if = "$root.user.role && ($root.user.role == 'admin' || $root.user.role == 'producer')") Public
    div.md-actions
      md-button(ng-click="answer()") Add
