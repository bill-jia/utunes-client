md-content#artist-show(layout-padding="" style="" ng-show="artist")
	md-content(layout-padding="" layout="row" flex)
		h1.md-primary.album-title {{artist.name}} {{artist.class_year}}
		span(flex)
		md-button.md-raised.md-accent(ui-sref="root.artists.edit({artistId: artist.id})" ng-if = "user.role && (user.role == 'admin' || user.role == 'producer')")
			|Edit artist
	md-content.article.primary-content(layout-padding="" ng-if="artist.bio || artist.profile_picture.url")
		img.md-whiteframe-z2.person-show-image(ng-src="{{artist.profile_picture.url.substring(7)}}")
		{{artist.bio}}
	img(ng-src="{{artist.profile_picture.large.url}}")
	md-content.primary-content#artist-albums(layout-padding="")
		h2.md-primary Albums
		grid-list(items="albums" type="'album'" count="albumCount" ng-show="albums")
	md-content.primary-content#artist-tracks(layout-padding="")
		h2.md-primary Tracks
		x-track-table(tracks="tracks" headers="headers" count="trackCount" ng-show="tracks")
