md-content(layout-padding="" style="padding: 24px;")

	h1 Edit {{artist.name}} {{artist.class_year}}

	md-content(layout-padding="" layout="row" layout-sm="column")
		form(name="parentForm")
			artist-fields(register-form-scope="registerFormScope" artist="artist" edit="artistEdit")
			md-input-container(layout="row")
				md-checkbox.md-warn(ng-model="artist.delete_associated_tracks") Delete associated tracks?
				md-button.md-raised.md-warn(ng-click="delete()") Delete
				md-button.md-raised.md-primary(ng-click="save()") Save
				md-progress-circular(md-mode="indeterminate" ng-show="formSending")
